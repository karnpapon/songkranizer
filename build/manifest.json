{
  "manifest_version": 2,
  "name": "Songkranizer",
  "version": "0.0.2",
  "description": "songkran simulator",
  "icons": {
    "16": "images/16.png",
    "128": "images/128.png"
  },
  "author": "Karnpapon Boonput <karnpapon@gmail.com>",
  "background": {
    "scripts": ["index.js"]
  },
  "permissions": ["activeTab", "storage", "tabCapture", "https://*/", "http://*/"],
  "browser_action": {
    "default_icon": {
      "19": "images/19.png",
      "38": "images/38.png"
    },
    "default_title": "Songkranizer"
  }
}
